{
	"name": "@ideaslab/validator",
	"version": "1.0.0",
	"exports": {
		".": {
			"require": {
				"types": "./dist/index.d.ts",
				"default": "./dist/index.js"
			},
			"import": {
				"types": "./dist/index.d.mts",
				"default": "./dist/index.mjs"
			}
		}
	},
	"main": "./dist/index.js",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.ts",
	"files": [
		"dist/**"
	],
	"license": "MIT",
	"scripts": {
		"build": "tsup --format esm,cjs",
		"lint": "cross-env TIMING=1 eslint \"src/**/*.ts\"",
		"dev": "tsup --format esm --watch --dts"
	},
	"dependencies": {
		"@prisma/client": "^6.3.0",
		"zod": "^3.24.1"
	},
	"devDependencies": {
		"@ideaslab/eslint-config": "workspace:*",
		"@ideaslab/tsconfig": "workspace:*",
		"eslint": "8.57.1",
		"tsup": "^8.5.1",
		"typescript": "^5.9.2"
	},
	"tsup": {
		"entry": [
			"src/index.ts"
		],
		"splitting": false,
		"sourcemap": true,
		"clean": true
	}
}