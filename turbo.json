{
	"$schema": "https://turborepo.dev/schema.json",
	"globalDependencies": [
		".env"
	],
	"globalEnv": [
		"BACKEND_URL"
	],
	"tasks": {
		"build": {
			"outputs": [
				"dist/**"
			]
		},
		"@ideaslab/db#build": {
			"dependsOn": [
				"db:generate"
			],
			"outputs": [
				"dist/**",
				"build/**"
			]
		},
		"@ideaslab/validator#build": {
			"outputs": [
				"dist/**"
			]
		},
		"@ideaslab/web#build": {
			"dependsOn": [
				"^build"
			],
			"outputs": [
				"dist/**",
				"build/**"
			]
		},
		"@ideaslab/server#build": {
			"dependsOn": [
				"^build"
			],
			"outputs": [
				"dist/**",
				"build/**"
			]
		},
		"lint": {},
		"dev": {
			"dependsOn": [
				"^@ideaslab/db#db:generate"
			],
			"cache": false,
			"persistent": true
		},
		"db:generate": {
			"cache": true
		},
		"db:push": {
			"cache": false
		},
		"db:migrate:dev": {
			"cache": false
		},
		"@ideaslab/server#generate": {
			"cache": false
		},
		"build:types": {},
		"@ideaslab/server#build:types": {
			"dependsOn": [
				"^@ideaslab/db#db:generate"
			]
		}
	}
}